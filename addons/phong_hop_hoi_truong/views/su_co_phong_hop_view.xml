<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- ========================= -->
        <!-- TREE VIEW -->
        <!-- ========================= -->
        <record id="view_su_co_phong_hop_tree" model="ir.ui.view">
            <field name="name">su.co.phong.hop.tree</field>
            <field name="model">su_co_phong_hop</field>
            <field name="arch" type="xml">
                <tree string="Danh sách sự cố phòng họp">
                    <field name="ten_su_co"/>
                    <field name="phong_hop_id"/>
                    <field name="muc_do"/>
                    <field name="trang_thai"/>
                    <field name="nguoi_bao_id"/>
                    <field name="thoi_gian_bao"/>
                </tree>
            </field>
        </record>

        <!-- ========================= -->
        <!-- FORM VIEW -->
        <!-- ========================= -->
        <record id="view_su_co_phong_hop_form" model="ir.ui.view">
            <field name="name">su.co.phong.hop.form</field>
            <field name="model">su_co_phong_hop</field>
            <field name="arch" type="xml">
                <form string="Sự cố phòng họp">
                <header>
                <button
                    name="action_goi_y_phong_trong"
                    string="Gợi ý phòng trống"
                    type="object"
                    class="oe_highlight"
                    attrs="{'invisible': [('trang_thai', '=', 'da_xu_ly')]}"
                />
                  </header>
                    <sheet>
                        <group>
                            <field name="ten_su_co"/>
                            <field name="phong_hop_id"/>
                            <field name="don_muon_id"/>
                        </group>

                        <group>
                            <field name="nguoi_bao_id"/>
                            <field name="thoi_gian_bao" readonly="1"/>
                        </group>

                        <group>
                            <field name="muc_do"/>
                            <field name="trang_thai"/>
                        </group>

                        <notebook>
                            <page string="Mô tả sự cố">
                                <field name="mo_ta"/>
                            </page>

                            <page string="Xử lý sự cố">
                                <group>
                                    <field name="nguoi_xu_ly_id"/>
                                    <field name="thoi_gian_xu_ly"/>
                                </group>
                                <field name="ghi_chu_xu_ly"/>
                            </page>
                        </notebook>

                    </sheet>
                </form>
            </field>
        </record> 

        <!-- ========================= -->
        <!-- ACTION -->
        <!-- ========================= -->
        <record id="action_su_co_phong_hop" model="ir.actions.act_window">
            <field name="name">Sự cố phòng họp</field>
            <field name="res_model">su_co_phong_hop</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>
