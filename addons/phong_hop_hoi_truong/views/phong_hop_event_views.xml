<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- TREE VIEW -->
        <record id="view_phong_hop_event_tree" model="ir.ui.view">
            <field name="name">phong_hop_event.tree</field>
            <field name="model">phong_hop_event</field>
            <field name="arch" type="xml">
                <tree string="Nhật ký phòng họp">
                    <field name="don_muon_phong_id"/>
                    <field name="phong_hop_id"/>
                    <field name="nhan_vien_id"/>
                    <field name="loai_su_kien"/>
                    <field name="thoi_gian"/>
                    <field name="hop_le"/>
                </tree>
            </field>
        </record>

        <!-- FORM VIEW -->
        <record id="view_phong_hop_event_form" model="ir.ui.view">
            <field name="name">phong_hop_event.form</field>
            <field name="model">phong_hop_event</field>
            <field name="arch" type="xml">
                <form string="Sự kiện phòng họp">
                    <sheet>
                        <group>
                            <field name="don_muon_phong_id"/>
                            <field name="phong_hop_id" readonly="1"/>
                        </group>
                        <group>
                            <field name="nhan_vien_id"/>
                            <field name="loai_su_kien"/>
                            <field name="thoi_gian"/>
                        </group>
                        <group>
                            <field name="hop_le"/>
                            <field name="qr_token"/>
                            <field name="ghi_chu"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- ACTION -->
        <record id="action_phong_hop_event" model="ir.actions.act_window">
            <field name="name">Nhật ký check-in phòng họp</field>
            <field name="res_model">phong_hop_event</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>
