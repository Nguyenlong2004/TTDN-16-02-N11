<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- FORM VIEW -->
        <record id="view_phong_ban_form" model="ir.ui.view">
            <field name="name">phong_ban</field>
            <field name="model">phong_ban</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_read_only" style="font-size:25px">
                            Phòng ban
                        </div>
                        <group col="4" string="Thông tin phòng ban">
                            <field name="ma_phong_ban"/>
                            <field name="ten_phong_ban"/>
                            <field name="mo_ta"/>
                        </group>
                         <notebook>
                    <page string="Nhân viên">
                        <field name="nhan_vien_ids">
                            <tree>
                                <field name="ma_dinh_danh"/>
                                <field name="ten"/>
    
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- TREE VIEW -->
        <record id="view_phong_ban_tree" model="ir.ui.view">
            <field name="name">phong_ban</field>
            <field name="model">phong_ban</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="ma_phong_ban"/>
                    <field name="ten_phong_ban"/>
                </tree>
            </field>
        </record>

        <!-- SEARCH VIEW -->
        <record id="phong_ban_search" model="ir.ui.view">
            <field name="model">phong_ban</field>
            <field name="arch" type="xml">
                <search>
                    <field name="ma_phong_ban"/>
                    <field name="ten_phong_ban"/>
                </search>
            </field>
        </record>

        <!-- ACTION -->
        <record id="action_phong_ban" model="ir.actions.act_window">
            <field name="name">Phòng ban</field>
            <field name="res_model">phong_ban</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="phong_ban_search"/>
        </record>

    </data>
</odoo>